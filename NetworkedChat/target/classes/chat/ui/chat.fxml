<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.ui.ChatController" spacing="10" alignment="CENTER">
    <TextArea fx:id="chatArea" prefHeight="400" prefWidth="400" editable="false"/>
    <HBox spacing="10">
        <TextField fx:id="inputField" prefWidth="300"/>
        <Button fx:id="sendButton" text="Send"/>
    </HBox>
</VBox>
